@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}
<!--main section-->
<section class="bg-texture hero pt-5">
    <div class="container">
        <div class="row d-sm-flex">
            <div class="col-sm-6 text-white wow fadeIn">
                <div class="mt-5 pt-5 hidden-sm-down"></div>
                <h1>Tư vấn marketing online</h1>
                <h2>
                    Giúp bạn quảng bá thương hiệu sản phẩm đến hàng triệu người
                </h2>
                <p class="mt-4 lead">
                    Giúp bạn xây dựng tập khách hàng, chọn lựa sản phẩm, thị trường, xây dựng kênh bán hàng và marketing online
                </p>
                <p>
                    <b>CEO Nguyễn Viết Huy - Giám đốc Công ty Minh Việt</b>
                </p>
                <p >
                    <a href="#" class="mr-2"><img src="~/Content/images/ct1.jpg" class="store-img" style="width:100%;height:100%;"/></a>
                </p>
            </div>
            <div class="col-sm-6 pt-5 hidden-sm-down wow fadeInRight">
                <img class="img-fluid mx-auto d-block" src="~/Content/new/img/shot-3.png" />
            </div>
        </div>
    </div>
</section>
<!--main features-->
<section class="bg-alt" id="features">
    <div class="container">
        <div class="row">
            <div class="col-md-6 offset-md-3 col-sm-8 offset-sm-2 col-xs-12 text-center wow fadeIn">
                <h2 class="text-primary">Vì sao bạn cần tư vấn?</h2>
                <p class="lead">
                    Vì chúng tôi giúp bạn tiết kiệm thời gian và tiền bạc
                </p>
            </div>
        </div>
        <div class="row d-md-flex mt-4 text-center">
            <div class="col-sm-3 mt-2">
                <div class="card border-none wow fadeIn">
                    <div class="card-block">
                        <i class="material-icons dp36 icon-box">camera_enhance</i>
                        <h5 class="card-title text-primary pt-5">Tìm đúng khách hàng</h5>
                        <p class="card-text">Họ là ai? Nơi sống, giới tính, hành vi</p>
                    </div>
                </div>
            </div>
            <div class="col-sm-3 mt-2">
                <div class="card border-none wow fadeIn">
                    <div class="card-block">
                        <i class="material-icons dp36 icon-box">crop</i>
                        <h5 class="card-title text-primary pt-5">Chọn đúng sản phẩm</h5>
                        <p class="card-text">Nhận diện thương hiệu, đặc tính nổi bật, xu hướng của sản phẩm</p>
                    </div>
                </div>
            </div>
            <div class="col-sm-3 mt-2">
                <div class="card border-none wow fadeIn">
                    <div class="card-block">
                        <i class="material-icons dp36 icon-box">cloud_upload</i>
                        <h5 class="card-title text-primary pt-5">Xây dựng kênh bán hàng</h5>
                        <p class="card-text">Thiết lập các kênh bán hàng online hiệu quả</p>
                    </div>
                </div>
            </div>
            <div class="col-sm-3 mt-2">
                <div class="card border-none wow fadeIn">
                    <div class="card-block">
                        <i class="material-icons dp36 icon-box">invert_colors</i>
                        <h5 class="card-title text-primary pt-5">Xây dựng kế hoạch tài chính</h5>
                        <p class="card-text">Phân bổ đúng vào các kênh marketing</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!--extra features-->
<section class="bg-inverse text-white" id="extra-features">
    <div class="container">
        <div class="row">
            <div class="col-md-6 offset-md-3 col-sm-8 offset-sm-2 col-xs-12 text-center wow fadeIn">
                <h2 class="text-orange">MARKETING ĐA KÊNH</h2>
                <p class="lead">
                    TẠO DỰNG CÁC KÊNH BÁN HÀNG HIỆU QUẢ
                </p>
            </div>
        </div>
        <div class="row d-md-flex mt-5">
            <div class="col-sm-4 wow fadeIn">
                <h5 class="text-orange">THIẾT KẾ WEBSITE</h5>
                <p>Thiết lập website để quảng bá sản phẩm với hình ảnh đẹp mắt, nội dung hấp dẫn</p>
                <h5 class="text-orange pt-5">ZALO MARKETING</h5>
                <p>Thiết lập OA, Shop cửa hàng trên zalo</p>
                <h5 class="text-orange pt-5">FACEBOOK MARKETING</h5>
                <p>Thiết lập fanpage, viết bài, quảng cáo</p>
            </div>
            <div class="col-sm-4 wow fadeIn">
                <img class="img-fluid mx-auto d-block pb-3" src="~/Content/images/ct1.jpg" alt="Gallery">
            </div>
            <div class="col-sm-4 wow fadeIn">
                <h5 class="text-orange">Thương mại điện tử</h5>
                <p>Thiết lập các shop bán hàng trên các trang thương mại điện tử (lazada, shopee,...)</p>
                <h5 class="text-orange pt-5">Adword</h5>
                <p>Quảng cáo trên Google Adword để ra đơn hàng ngay</p>
                <h5 class="text-orange pt-5">Xây dựng hệ thống đại lý</h5>
                <p>Xây dựng đội sales, cộng tác viên, đại lý phân phối</p>
            </div>
        </div>
    </div>
</section>