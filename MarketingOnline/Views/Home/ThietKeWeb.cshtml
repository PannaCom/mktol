        if (stt == 6) {
            document.getElementById("goi").value = "6";
        }
    }
    function muahang() {
        var sphone = $("#phone").val();
        var semail = $("#email").val();
        var sname = $("#name").val();
        var snotice = $("#goi option:selected").text() + ", " + window.location.href;

        if (sphone == "") {
            alert("Nhập số điện thoại của bạn");
            document.getElementById("phone").focus();
            return;
        }
        if (semail == "") {
            alert("Nhập email của bạn");
            document.getElementById("email").focus();
            return;
        }

        $("#sendMessageButton2").html("Đang đăng ký xin đợi");

        $.ajax({
            url: "/Home/sendmail", type: 'post',
            data: { phone: sphone, email: semail, name: sname, notice: snotice },
            success: function (rs) {
                if (rs == '1') {
                    alert("Đã nhận được đăng ký của bạn. Chúng tôi sẽ liên hệ sớm nhất để tư vấn! Cảm ơn bạn!");
